<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="onBackward"
            android:padding="38px"
            android:src="@mipmap/arrow_back_white"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:text="问题与反馈"
            android:textColor="#7bbfea"
            android:textSize="60px" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#75fffff0">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/suggest"
        android:background="#75fffff0"
        android:hint="请告诉我们您对YoutStep的建议，或者遇到的问题"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="320dp"
            android:background="#75fffff0"
            android:hint="如果有需要请留下微信或qq，方便联系你"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:layout_marginTop="400dp"
            android:layout_centerHorizontal="true"
            android:text="提交"
            android:textColor="@color/grey"
            android:background="#75fffff0"/>
    </RelativeLayout>
</LinearLayout>
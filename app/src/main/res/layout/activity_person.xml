<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="onBackward"
            android:padding="38px"
            android:src="@mipmap/arrow_back_white"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:text="个人中心"
            android:textColor="#7bbfea"
            android:textSize="60px" />
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/grey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:weightSum="5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/begin"
                android:textColor="@color/blue"
                android:text="-------"
                android:gravity="center"
                android:textSize="30sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:text="第一次开始使用YourStep，从此开始健康生活"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_data"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:gravity="center"
                android:text=""/>
        </LinearLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/grey" />
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:src="@drawable/date"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_date"
                    android:layout_below="@id/date"
                    android:text="YourStep已经陪你走过"
                    android:textColor="@color/blue"
                    android:gravity="center"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_input_date"
                    android:layout_below="@+id/tv_date"
                    android:textColor="@color/blue"
                    android:textSize="25sp"
                    android:text="--天"
                    android:gravity="center"/>

            </RelativeLayout>
                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_gravity="center_horizontal"
                    />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cup"
                    android:src="@drawable/jiangbei"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_cup"
                    android:layout_below="@+id/cup"
                    android:text="共达标天数"
                    android:textColor="@color/blue"
                    android:gravity="center"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_input_cup"
                    android:layout_below="@+id/tv_cup"
                    android:textColor="@color/blue"
                    android:textSize="25sp"
                    android:text="--天"
                    android:gravity="center"/>
            </RelativeLayout>

        </LinearLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/grey" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已经走了"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_input_mail"
                android:textColor="@color/blue"
                android:textSize="25sp"
                android:text="--公里"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="路漫漫其修远兮，吾将坚持锻炼"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/grey" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zuji"
                    android:src="@drawable/zuji"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_zuji"
                    android:layout_below="@+id/zuji"
                    android:text="累计走过了"
                    android:textColor="@color/blue"
                    android:gravity="center"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_input_zuji"
                    android:textColor="@color/blue"
                    android:textSize="25sp"
                    android:layout_below="@+id/tv_zuji"
                    android:text="----步"
                    android:gravity="center" />
            </RelativeLayout>
            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:layout_gravity="center_horizontal"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/medal"
                    android:drawableTop="@drawable/medal"
                    android:text="单日最多步数记录"
                    android:textColor="@color/blue"
                    android:gravity="center"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_input_medal"
                    android:layout_below="@+id/medal"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="25sp"
                    android:text="----步"/>
            </RelativeLayout>
        </LinearLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/grey" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/calorie"
                android:gravity="center"
                android:text="累计消耗的热量"
                android:textColor="@color/blue"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cal"
                android:layout_below="@+id/textView"
                android:textColor="@color/blue"
                android:textSize="25sp"
                android:text="--千卡"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>